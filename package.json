{
  "name": "rivet-plugin-claude-code",
  "packageManager": "yarn@3.5.0",
  "version": "1.0.0",
  "type": "module",
  "description": "Rivet plugin for Claude Code headless mode integration",
  "main": "dist/bundle.js",
  "types": "dist/index.d.ts",
  "exports": {
    "*": {
      "default": "./dist/bundle.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "NODE_NO_WARNINGS=1 tsc -b && NODE_NO_WARNINGS=1 tsx bundle.ts",
    "dev": "run-p watch:tsc watch:esbuild:sync",
    "watch:tsc": "tsc -b -w --preserveWatchOutput",
    "watch:esbuild": "NODE_NO_WARNINGS=1 tsx bundle.ts --watch",
    "watch:esbuild:sync": "NODE_NO_WARNINGS=1 tsx bundle.ts --watch --sync",
    "publish": "yarn build && yarn npm publish --access public"
  },
  "dependencies": {
    "@ironclad/rivet-core": "^1.4.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.2",
    "npm-run-all": "^4.1.5",
    "recursive-copy": "^2.0.14",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "volta": {
    "node": "20.6.1"
  },
  "rivet": {
    "skipInstall": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lawls/rivet-plugin-claude-code.git"
  },
  "keywords": [
    "rivet",
    "plugin",
    "claude",
    "ai",
    "anthropic",
    "headless"
  ],
  "author": "Cornelius Donley",
  "license": "MIT"
}
